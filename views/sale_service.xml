<odoo>
    <data>
        <!--<menuitem id="sale_service_main_menu" action="sale_service_action"
                  parent="salesafe_main_menu" name="Manage the sales"/>-->

        <record id="sale_service_view_edit_and_create" model="ir.ui.view">
            <field name="name">Sale service view edit and create</field>
            <field name="model">salesafe.sale_service</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="nb_buy"/>
                        </group>
                        <group>
                            <field name="total_price"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sale_service_view_tree" model="ir.ui.view">
            <field name="name">Sale service view tree</field>
            <field name="model">salesafe.sale_service</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="nb_buy"/>
                    <field name="total_price"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>